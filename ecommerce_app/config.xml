<?xml version='1.0' encoding="UTF-8" standalone="yes"?>
<widget id="io.cordova.hellocordova" android-packageName="com.bscs.ecommerceApp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Shopzilla</name>
    <description>
        This is a simple ecommerce app.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        ABU, CUENTAS, ROBLES
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
      <!-- Landscape -->
        <splash src="res/screen/android/splash-land-hdpi/screen.png" density="land-hdpi" />
        <splash src="res/screen/android/splash-land-ldpi/screen.png" density="land-ldpi" />
        <splash src="res/screen/android/splash-land-mdpi/screen.png" density="land-mdpi" />
        <splash src="res/screen/android/splash-land-xhdpi/screen.png" density="land-xhdpi" />
        <splash src="res/screen/android/splash-land-xxhdpi/screen.png" density="land-xxhdpi" />
        <splash src="res/screen/android/splash-land-xxxhdpi/screen.png" density="land-xxxhdpi" />

        <!-- Portrait -->
        <splash src="res/screen/android/splash-port-hdpi/screen.png" density="port-hdpi" />
        <splash src="res/screen/android/splash-port-ldpi/screen.png" density="port-ldpi" />
        <splash src="res/screen/android/splash-port-mdpi/screen.png" density="port-mdpi" />
        <splash src="res/screen/android/splash-port-xhdpi/screen.png" density="port-xhdpi" />
        <splash src="res/screen/android/splash-port-xxhdpi/screen.png" density="port-xxhdpi" />
        <splash src="res/screen/android/splash-port-xxxhdpi/screen.png" density="port-xxxhdpi" />

        <!-- Dark Mode -->
        <splash src="res/screen/android/splash-land-hdpi/screen.png" density="land-night-hdpi" />
        <splash src="res/screen/android/splash-land-ldpi/screen.png" density="land-night-ldpi" />
        <splash src="res/screen/android/splash-land-mdpi/screen.png" density="land-night-mdpi" />
        <splash src="res/screen/android/splash-land-xhdpi/screen.png" density="land-night-xhdpi" />
        <splash src="res/screen/android/splash-land-xxhdpi/screen.png" density="land-night-xxhdpi" />
        <splash src="res/screen/android/splash-land-xxxhdpi/screen.png" density="land-night-xxxhdpi" />

        <splash src="res/screen/android/splash-port-hdpi/screen.png" density="port-night-hdpi" />
        <splash src="res/screen/android/splash-port-ldpi/screen.png" density="port-night-ldpi" />
        <splash src="res/screen/android/splash-port-mdpi/screen.png" density="port-night-mdpi" />
        <splash src="res/screen/android/splash-port-xhdpi/screen.png" density="port-night-xhdpi" />
        <splash src="res/screen/android/splash-port-xxhdpi/screen.png" density="port-night-xxhdpi" />
        <splash src="res/screen/android/splash-port-xxxhdpi/screen.png" density="port-night-xxxhdpi" />

        <!-- Icons -->
        <icon src="res/icon/android/ldpi.png" density="ldpi" />
        <icon src="res/icon/android/mdpi.png" density="mdpi" />
        <icon src="res/icon/android/hdpi.png" density="hdpi" />
        <icon src="res/icon/android/xhdpi.png" density="xhdpi" />
        <icon src="res/icon/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon/android/xxxhdpi.png" density="xxxhdpi" />

        <access origin="*" />
        <preferance name="android-usesCleartextTraffic" value="true" />
        <allow-navigation href="*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="SplashScreenDelay" value="3000" />
    <!-- <preference name="SplashScreen" value="screen" /> -->
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenSpinnerColor" value="white" />
    <preference name="SplashShowOnlyFirstTime" value="true" />

</widget>
